@{
    ViewData["Title"] = "VV Graph";
}
<div class="jumbotron">
    <div class="container">
        <h1>VV Graph</h1>
        <p>A graph-visualizing and processing sample application.</p>
    </div>
</div>

<div class="container" ng-controller="HomeController" ng-cloak>
    <div class="row">
        <div class="col-xs-12">
            <form class="form-inline" ng-submit="changeGraph()">
                <div class="form-group">
                    <label for="exampleInputName2">Graph URL</label>
                    <input type="text" size="100" class="form-control" id="exampleInputName2" ng-model="graphUrl">
                </div>
                <button type="submit" class="btn btn-default">Update</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h2>{{graphName}}</h2>
        </div>
    </div>
    <div class="row" ng-show="errorMessage != null">
        <div class="col-xs-12">
            <p class="bg-danger">{{errorMessage}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div id="graph-container"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form ng-submit="findShortestPath()">
                <button type="submit" ng-disabled="startNodeId == null || endNodeId == null" class="btn btn-default" id="find-shortest-path">
                    Find Shortest Path
                </button>
            </form>
        </div>
    </div>
</div>